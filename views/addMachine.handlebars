<section id="add" class="container">
    <div class="form-wrap">
      <h1>Add Machineries</h1>
      <p>Fill in the form</p>
      {{#each errors}}
        <div class="error">
          <p>{{text}}</p>
        </div>
      {{/each}}
      <form action="/machine/add" method="POST">
        <div class="input-group">
          <label for="name">Machine Name</label>
          <input type="text" name="name" id="name" class="input-box" placeholder="eg. "
            maxlength="100" value={{name}}>
        </div>
         <div class="input-group">
          <label for="price"> Price</label>
          <input type="text" name="price" id="price" class="input-box" placeholder="$ "
            maxlength="100" value={{name}}>
        </div>
        <div class="input-group">
          <label for="info">Information</label>
          <textarea name="info" id="info" class="input-box" placeholder="Describe the info of the machine"
            rows="10">{{info}}</textarea>
        </div>
        <div class="input-group">
          <label for="uses">Uses</label>
          <textarea name="uses" id="uses" class="input-box" placeholder="Describe the uses of the machine"
            rows="10">{{uses}}</textarea>
        </div>
        <div class="input-group">
          <label for="price">Image Url</label>
          <input type="text" name="imageUrl" id="imageUrl" class="input-box" placeholder="-----.jpg "
            maxlength="100" value={{imageUrl}}>
        </div>
        <div class="input-group">
          <label for="price">Video Url</label>
          <input type="text" name="videoUrl" id="videoUrl" class="input-box" placeholder="// "
            maxlength="100" value={{videoUrl}}>
        </div>
        <input type="submit" value="Add Machine" class="btn btn-reverse">
      </form>
    </div>
  </section>