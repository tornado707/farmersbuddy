<section id="add" class="container">
    <div class="form-wrap">
      <h1>Add Fruits</h1>
      <p>Fill in the form</p>
      {{#each errors}}
        <div class="error">
          <p>{{text}}</p>
        </div>
      {{/each}}
      <form action="/fruit/add" method="POST">
        <div class="input-group">
          <label for="name">Fruit Name</label>
          <input type="text" name="name" id="name" class="input-box" placeholder="eg. "
            maxlength="100" value={{name}}>
        </div>
         <div class="input-group">
          <label for="season">Seasons</label>
          <input type="text" name="season" id="season" class="input-box" placeholder="eg. "
            maxlength="100" value={{name}}>
        </div>
        <div class="input-group">
          <label for="description">Description</label>
          <textarea name="description" id="description" class="input-box" placeholder="Describe the info of the machine"
            rows="10">{{description}}</textarea>
        </div>
        <div class="input-group">
          <label for="season">Image Url</label>
          <input type="text" name="imageUrl" id="imageUrl" class="input-box" placeholder="eg. "
            maxlength="100" value={{imageUrl}}>
        </div>
        <input type="submit" value="Add Fruit" class="btn btn-reverse">
      </form>
    </div>
  </section>