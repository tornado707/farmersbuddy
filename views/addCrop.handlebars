<section id="add" class="container">
    <div class="form-wrap">
      <h1>Add Crop</h1>
      <p>Fill in the form</p>
      {{#each errors}}
        <div class="error">
          <p>{{text}}</p>
        </div>
      {{/each}}
      <form action="/crop/add" method="POST">
        <div class="input-group">
          <label for="name">Crop Name</label>
          <input type="text" name="name" id="name" class="input-box" placeholder="eg. "
            maxlength="100" value={{name}}>
        </div>
        <div class="input-group">
          <label for="season">Season </label>
          <input type="text" name="season" id="season" class="input-box" placeholder="eg. "
          maxlength="100" value={{season}}>
        </div>
        <div class="input-group">
          <label for="crtype">Type</label>
          <input type="text" name="crtype" id="crtype" class="input-box" placeholder="eg. " value={{crtype}}>
        </div>
        <div class="input-group">
          <label for="description">Crop Description</label>
          <textarea name="description" id="description" class="input-box" placeholder="Describe the details of the "
            rows="10">{{description}}</textarea>
        </div>
        <div class="input-group">
          <label for="imageUrl">Image </label>
          <input type="text" name="imageUrl" id="imageUrl" class="input-box" placeholder="eg. "
          maxlength="100" value={{imageUrl}}>
        </div>
        <input type="submit" value="Add Crop" class="btn btn-reverse">
      </form>
    </div>
  </section>